<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/list_item_linear_padding"
    android:paddingLeft="@dimen/list_item_linear_padding"
    android:paddingRight="@dimen/list_item_linear_padding"
    android:paddingStart="@dimen/list_item_linear_padding">

    <TextView
        android:id="@+id/section_name"
        android:layout_width="@dimen/section_fix_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="SectionName"
        android:textSize="@dimen/section_text_size"/>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/title_margin"
        android:layout_marginStart="@dimen/title_margin"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:textSize="@dimen/title_text_size"
        android:text="Shameful shutdown of proper election debate">
    </TextView>

    <LinearLayout
        android:layout_width="@dimen/date_author_fix_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/date_author_margin"
        android:layout_marginStart="@dimen/date_author_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/publication_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:gravity="end"
            android:textSize="@dimen/date_author_text_size"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="author"
            android:gravity="end"
            android:textSize="@dimen/date_author_text_size"/>
    </LinearLayout>

</LinearLayout>
